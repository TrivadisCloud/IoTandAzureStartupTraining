<Page
    x:Class="Trivadis.IoT.Uwp.LampController.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Trivadis.IoT.Uwp.LampController"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <TextBlock Text="Turn the lights on and off" Margin="30" FontSize="30"/>
    <ToggleButton Content="Green light switch"
                  Checked="ToggleGreenLight_Checked" 
                  Unchecked="ToggleGreenLight_Unchecked"
                  FontSize="30"
                  Margin="30 15"/>
    <ToggleButton Content="Red light switch"
                  Checked="ToggleRedLight_Checked" 
                  Unchecked="ToggleRedLight_Unchecked"
                  FontSize="30"
                  Margin="30 15"/>
  </StackPanel>
</Page>
